<?xml version="1.0" encoding="utf-8" ?>

<!-- Begin the XML for this input template -->
<input_template
  xmlns="http://digital.uflib.ufl.edu/metadata/sobekcm_template/"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://digital.uflib.ufl.edu/metadata/sobekcm_template/
		http://digital.uflib.ufl.edu/metadata/sobekcm_template/sobekcm_template.xsd">

  <!-- Define the information about this input template -->
  <name>Add-on for packages destined for a SobekCM library</name>
  <name language="spa">Plantilla SobekCM</name>
  <name language="fre">Calibre SobekCM</name>
  <notes>This includes several metadata fields which should be included in the template if you will be sending material to a SobekCM digital library.</notes>
  <dateCreated>May 19, 2011</dateCreated>
  <lastModified>May 19, 2011</lastModified>
  <creator>Mark V Sullivan</creator>
  <includeUserAsAuthor>false</includeUserAsAuthor>
  <uploads>FILE_OR_URL</uploads>
  <uploadMandatory>false</uploadMandatory>

  <!-- This defines the inputs which are available for the user -->
  <inputs>
    <page>
      <name language="eng">SobekCM</name>
      <name language="fre">SobekCM</name>
      <name language="spa">SobekCM</name>
      <panel>
        <name language="eng">Record Information</name>
        <name language="spa">Interior Registro</name>
        <name language="fre">Enregistrement Interne</name>
        <element type="Bib" mandatory="true" />
        <element type="VID" mandatory="true" />
        <element type="EncodingLevel" />
      </panel>
      <panel>
        <name language="eng">Affiliation</name>
        <name language="spa">Affiliation</name>
        <name language="fre">Affiliation</name>
        <element type="Affiliation" subtype="hierarchical" repeatable="true" />
      </panel>
      <panel>
        <name>Aggregation Membership ( i.e., collections to which items should be assigned )</name>
        <name language="spa">Colecciones</name>
        <name language="fre">Collections</name>
        <element type="Aggregations" />
      </panel>
      <panel>
        <name language="eng">Branding applied when viewing resource online</name>
        <name language="spa">Iconos para el Internet </name>
        <name language="fre">Icônes pour l'Internet</name>
        <element type="Icon" repeatable="true" />
        <element type="WebSkin" repeatable="true" />
      </panel>
      <panel>
        <name language="eng">Other Files</name>
        <name language="spa">Otros Archivos</name>
        <name language="fre">D'autres Dossiers</name>
        <element type="Thumbnail" subtype="select" repeatable="false" />
      </panel>
      <panel>
        <name language="eng">Viewers for this resource</name>
        <name language="spa">Los espectadores de este recurso</name>
        <name language="fre">Les téléspectateurs de cette ressource</name>
        <element type="Viewer"  repeatable="true" />
      </panel>
    </page>
  </inputs>
</input_template>
<!-- End of input template XML -->